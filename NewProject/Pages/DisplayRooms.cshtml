@page
@model MyApp.Namespace.DisplayRoomsModel
@{
    ViewData["Title"] = "Display Rooms";
}

<style>

    h1 {
        text-align: center;
    }

    body {
        background-color: rgb(188, 212, 235);
    }
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #addRoomForm {
        margin-bottom: 0;
    }

    .card-header button {
        margin-bottom: 0;
    }

    .btn {
        background-color: rgb(140, 140, 248);
        border: none;
    }
</style>

<h1>Display Rooms</h1>

@if (Model.NewRoomList != null && Model.NewRoomList.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Create Rooms
            <form id="addRoomForm" method="get" action="/CreateRooms">
                <button type="submit" class="btn btn-sm btn-primary">Add Room</button>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Name</th>
                        <th>Capacity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.NewRoomList)
                    {
                        <tr>
                            <td>@room.Id</td>
                            <td>@room.RoomName</td>
                            <td>@room.Capacity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>No rooms available.</p>
}